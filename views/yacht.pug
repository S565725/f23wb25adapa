extends layout

block content
   
  p Hello yacht.pug
  - var results = [{Color:'Black',Yacht_Number:32, Sizeof_Yacht:100},{Color:'Blue',Yacht_Number:33, Sizeof_Yacht:200},{Color:'Green',Yacht_Number:34, Sizeof_Yacht:1000}]
  .container-fluid
    .row
      each yacht,index in results
        div(class="col-sm-2" onclick=`buy(${index})`)
          h3 #{yacht.Color}
          p Yachtnumber: #{yacht.Yacht_Number}
          p Capacityofyacht: $#{yacht.Sizeof_Yacht}
  
  script.
    function buy(index) {
        alert(`You purchased : ${index}`)
    }

  
  
  